@model MedicineType

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-4">
            <h2 class="text-primary">Delete Medicine Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
 
        </div>
        <div>
            <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
            <a asp-controller="MedicineType" asp-action="Index" class="btn btn-secondary" style="width:150px">
             Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
     }
}
